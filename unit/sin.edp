include "test.idp"

cout << "sin" << endl;
real t;

cout << IND << "real" << endl;

real zero = 0.;
real rpi = pi;
real r = pi/2;

t = clock();
real reszero = sin(zero);
t = clock() - t;
cout << IND << IND << t << endl;
test(reszero == 0.);

t = clock();
real respi = sin(rpi);
t = clock() - t;
cout << IND << IND << t << endl;
test((respi - sin(pi)) < HWERROR);

t = clock();
real resr = sin(r);
t = clock() - t;
cout << IND << IND << t << endl;
test(resr == 1.);

cout << IND << "complex" << endl;

complex cpos = 1 + 1i;
complex cneg = 1 - 1i;

t = clock();
complex rescpos = sin(cpos);
t = clock() - t;
cout << IND << IND << t << endl;
test(rescpos == (sinh(1i * cpos))/1i);

t = clock();
complex rescneg = sin(cneg);
t = clock() - t;
cout << IND << IND << t << endl;
test(rescneg == (sinh(1i * cneg))/1i);
