cout << IND << "real array" << endl;

int n = 4;
real[int] A = [-1.,0.,0.3,1.];
real[int] B(n);

t = clock();
B = asin(A);
t = clock() - t;
cout << IND << IND << t << endl;
for (int i = 0; i < n; i++) {
  test(B[i] == asin(A[i]));
}

int tab = 2;
real[int, int] AA = [[-1.,0.8,0.3,1.],[-0.9, -1.,1.,0.8]];
real[int, int] BB(tab, n);

t = clock();
BB = asin(AA);
t = clock() - t;
cout << IND << IND << t << endl;
for (int i = 0; i < tab; i++) {
  for (int j = 0; j < n; j++) {
    test(BB(i,j) == asin(AA(i,j)));
  }
}
