include "test.idp"

cout << "projection" << endl;
real t;

cout << IND << "real" << endl;

real a = 4.;
real b = -1.5;
real c = 3.;

t = clock();
real r1 = projection(a, b, c);
t = clock() - t;
cout << IND << IND << t << endl;
test(r1 == min(max(a,c),b) * (a < b) +  min(max(b, c), a) * (1-(a < b)));

t = clock();
real r2 = projection(c, b, a);
t = clock() - t;
cout << IND << IND << t << endl;
test(r2 == min(max(c,a),b) * (c < b) +  min(max(b, a), c) * (1-(c < b)));
